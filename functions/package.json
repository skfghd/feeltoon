{
  "name": "fairy-tale-functions",
  "version": "1.0.0",
  "description": "Firebase Functions for Fairy Tale Generation Platform",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "@google/genai": "^1.12.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.8.1",
    "puppeteer": "^24.15.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.16.11",
    "typescript": "^5.6.3"
  },
  "private": true
}