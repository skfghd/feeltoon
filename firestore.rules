rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // 사용자 문서 - 본인만 접근 가능
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 동화 문서 - 공개된 동화는 모두 읽기 가능, 작성자만 수정 가능
    match /fairyTales/{storyId} {
      allow read: if resource.data.isPublic == true && resource.data.isApproved == true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
    }
    
    // 좋아요 - 읽기는 모두 가능, 생성/삭제는 인증된 사용자만
    match /likes/{likeId} {
      allow read: if true;
      allow create, delete: if request.auth != null;
    }
    
    // 일일 사용량 - 읽기는 모두 가능, 수정은 시스템에서만
    match /dailyUsage/{usageId} {
      allow read: if true;
      allow write: if false; // Functions에서만 수정 가능
    }
    
    // 기본적으로 모든 접근 거부
    match /{document=**} {
      allow read, write: if false;
    }
  }
}